        <%# <div id="carouselExampleControls" class="carousel slide d-flex justify-content-between" data-ride="carousel"> %>
          <div class="image w-100 m-4">
            <% if @flat.photo_url.present? %>
              <%= image_tag @flat.photo_url, height:400, crop: :fill, class: "card-img-top" %>
            <% else %>
              <img src="<%= @flat.photos.last.url %>" class="w-100" alt="Flat image">
            <% end %>
          </div>
          <div class="mt-4" style="width: 100%; height: 400px;"
              id ="map"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>

        <%# </div> %>
    </div>

    <div class="container-info d-flex justify-content-between">
        <div class="container-descr">
            <div class="info m-2 p-2">
                <h2 class="caraousel-name"><%= @flat.name %></h2>
                <p class="caraousel-text">Number of guests: <%= @flat.number_of_guests %></p>
                <p class="caraousel-text">Location:<%= @flat.address%></p>
            </div>

            <div class="info m-2 p-2" data-controller="description">
                <h3>About this property</h3>
                <div id="descriptionCollapse">
                  <p>
                    <%= @flat.description.truncate(200) %>
                    <% if @flat.description.length > 200 %>
                      <span data-target="description.dots">...</span>
                      <span data-target="description.more" style="display: none;">
                        <%= @flat.description.slice(200..-1) %>
                      </span>
                      <button data-action="click->description#toggle" data-target="description.readMoreBtn" class="btn btn-link" style="text-decoration: none;">See more</button>
                    <% end %>
                  </p>
                </div>
              </div>
